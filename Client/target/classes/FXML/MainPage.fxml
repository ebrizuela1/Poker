<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" prefHeight="600" prefWidth="700" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="Controller">
    <center>
        <HBox alignment="CENTER" fillHeight="false" spacing="30">
            <VBox alignment="CENTER" spacing="15">
                <Button fx:id="Cream" onAction="#handleCream" prefWidth="200" text="Cream" />
                <Button fx:id="Sugar" onAction="#handleSugar" prefWidth="200" text="Sugar" />
                <Button fx:id="ColdFoam" onAction="#handleColdFoam" prefWidth="200" text="Cold Foam" />
                <Button fx:id="WhippedCream" onAction="#handleWhippedCream" prefWidth="200" text="Whipped Cream" />
                <HBox spacing="10">
                    <Button fx:id="NewOrder" onAction="#handleNewOrder" prefWidth="95" text="New Order" />
                    <Button fx:id="DeleteOrder" onAction="#handleDeleteOrder" prefWidth="95" text="Delete Order" />
                </HBox>
            </VBox>
            <TextArea fx:id="myTextArea" editable="false" prefHeight="400" prefWidth="300" />
        </HBox>
    </center>
</BorderPane>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="WelcomeController"
            prefHeight="600" prefWidth="700" fx:id="root">

    <center>
        <VBox alignment="CENTER" spacing="50">

            <Label text="POKER" styleClass="main-title"/>

            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="ipField" promptText="Enter IP"/>
                <TextField fx:id="portField" promptText="Enter Port"/>
            </HBox>

            <Button fx:id="joinButton" text="JOIN" onAction="#handleJoinButton"/>
        </VBox>
    </center>
</BorderPane>
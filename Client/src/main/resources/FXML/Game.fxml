<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameController"
            prefHeight="600" prefWidth="700" fx:id="root">
    <top>
        <HBox>
            <ImageView fx:id="dealerCardOne" fitHeight="100" fitWidth="60" preserveRatio="true"/>
            <ImageView fx:id="dealerCardTwo" fitHeight="100" fitWidth="60" preserveRatio="true"/>
            <ImageView fx:id="dealerCardThree" fitHeight="100" fitWidth="60" preserveRatio="true"/>
        </HBox>
    </top>
    <center>
        <ImageView fx:id="cardImage" fitHeight="300" fitWidth="200" preserveRatio="true">
            <image>
                <Image url="@../Cards/hearts_12.png"/>
            </image>
        </ImageView>
    </center>

</BorderPane>
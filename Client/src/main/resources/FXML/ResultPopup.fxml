<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="ResultController" alignment="CENTER" spacing="20" style="-fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19">
    <Label fx:id="resultMessage" text="PLAYER WINS $X!" style="-fx-font-size: 24px; -fx-text-fill: green;"/>
    <Label fx:id="winningsDisplay" text="Winnings for this round: $50" style="-fx-font-size: 16px;"/>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Play Another Game" onAction="#handlePlayAgain" styleClass="action-btn"/>
        <Button text="Exit Program" onAction="#handleExit" styleClass="action-btn, fold-btn"/>
    </HBox>
</VBox>
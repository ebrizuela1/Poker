<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" prefHeight="600" prefWidth="700" stylesheets="@../CSS/Welcome.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="WelcomeController">

    <center>
        <VBox alignment="CENTER" spacing="50">
   
            <Label style="-fx-font-family: Georgia;" styleClass="main-title" stylesheets="@../CSS/Welcome.css" text="POKER" textFill="WHITE">
            <font>
               <Font name="Baloo 2 Regular" size="13.0" />
            </font></Label>

            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="ipField" promptText="Enter IP" />
                <TextField fx:id="portField" promptText="Enter Port" />
            </HBox>
            <VBox alignment="CENTER">
                <Label fx:id="errorLabel" style="-fx-text-fill: red" text=""/>
                <Button fx:id="joinButton" maxHeight="100.0" maxWidth="75.0" minHeight="-Infinity" minWidth="-Infinity" onAction="#handleJoinButton" style="-fx-background-color: #7B1414;" text="JOIN" textFill="WHITE">
                <font>
                   <Font name="System Bold" size="13.0" />
                </font></Button>
            </VBox>
        </VBox>
    </center>
</BorderPane>
